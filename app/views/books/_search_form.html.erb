<div class="mb-6 lg:w-1/2">
  <%= form_tag books_path, method: :get, class: "flex gap-2" do %>

    <div class="flex-1">
      <%= text_field_tag :search_query, params[:search_query],
                         placeholder: "Search by title or author...",
                         class: "block p-3 w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm" %>
      <% if params[:search_query].present? %>
      <% end %>
    </div>
    <%= submit_tag "Search", class: "flex-none rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition" %>
  <% end %>
</div>

