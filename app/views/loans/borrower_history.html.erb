<%= content_for :title, "Borrower History - #{@borrower_name}" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Borrowing History for <%= @borrower_name %></h2>
    <%= link_to loans_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left"></i> Back to Loans
    <% end %>
  </div>

  <div class="row">
    <% @loans.each do |loan| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-header bg-light">
            <h5 class="card-title mb-0 text-primary"><%= loan.book.title %></h5>
          </div>
          <div class="card-body d-flex flex-column">
            <div class="card-text flex-grow-1">
              <p class="mb-2">
                <i class="far fa-calendar-alt text-muted"></i>
                <strong>Borrowed:</strong> <%= loan.borrowed_on.strftime("%B %d, %Y") %>
              </p>
              <% if loan.book.author.present? %>
                <p class="mb-2">
                  <i class="fas fa-user-edit text-muted"></i>
                  <strong>Author:</strong> <%= loan.book.author %>
                </p>
              <% end %>
              <div class="mt-3">
                <% if loan.returned_on.present? %>
                  <div class="alert alert-success p-2">
                    <i class="fas fa-check-circle"></i>
                    Returned on <%= loan.returned_on.strftime("%B %d, %Y") %>
                  </div>
                <% else %>
                  <div class="alert alert-warning p-2">
                    <i class="fas fa-clock"></i>
                    Currently Borrowed
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>